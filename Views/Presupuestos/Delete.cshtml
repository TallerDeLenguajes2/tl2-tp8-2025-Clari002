@model tl2_tp8_2025_Clari002.Models.Presupuestos

@{
    ViewData["Title"] = "Eliminar Presupuesto";
}

<h2>@ViewData["Title"]</h2>

<h4>Â¿Estas seguro de eliminar este presupuesto?</h4>

<div class="card">
    <div class="card-body">
        <p><strong>ID:</strong>@Model.IdPresupuesto</p>
        <p><strong>Destinatario:</strong>@Model.NombreDestinatario</p>
        <p><strong>Fecha:</strong>@Model.FechaCreacion.ToShortDateString()</p>
    </div>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="IdPresupuesto"/>
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>