@{
    ViewData["Title"] = "Agregar producto al presupuesto";
    var productos = ViewBag.Productos as List<tl2_tp8_2025_Clari002.Models.Productos>;
    int idPresupuesto = ViewBag.IdPresupuesto;
}

<h2>@ViewData["Title"]</h2>

<form asp-action="AgregarProducto" method="post">
    <input type="hidden" name="idPresupuesto" value="@idPresupuesto" />

    <div class="mb-3">
        <label class="form-label">Producto</label>
        <select class="form-select" name="idProducto">
            @foreach (var p in productos)
            {
                <option value="@p.IdProducto">@p.Descripcion - $@p.Precio</option>
            }
        </select>
    </div>

    <div class="mb-3">
        <label class="form-label">Cantidad</label>
        <input type="number" name="cantidad" class="form-control" min="1" required />
    </div>

    <button type="submit" class="btn btn-primary">Agregar</button>
    <a asp-action="Details" asp-route-id="@idPresupuesto" class="btn btn-secondary">Volver</a>
</form>
